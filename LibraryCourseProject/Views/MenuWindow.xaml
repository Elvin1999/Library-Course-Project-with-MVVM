<Window x:Class="LibraryCourseProject.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryCourseProject.Views"
        mc:Ignorable="d"
        Title="MenuWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Button Width="120" Height="50" Content="Users" Command="{Binding UsersSectionCommand}"></Button>
            <Button Width="120" Height="50" Content="Filials" Command="{Binding FilialSectionCommand}"></Button>
            <Button Width="120" Height="50" Content="Workers" Command="{Binding WorkerSectionCommand}"></Button>
            <Button Width="120" Height="50" Content="Clients" Command="{Binding ClientSectionCommand}"></Button>
            <Button Width="120" Height="50" Content="Book" Command="{Binding BookSectionCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
